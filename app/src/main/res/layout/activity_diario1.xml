<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_diario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/hom"
    tools:context="com.example.vanessa.shareyourstory.diario1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva Historia:"
        android:id="@+id/nuevahistoria"
        android:fontFamily="casual"
        android:textSize="34sp"
        android:textColor="#641E16"/>
    <EditText
        android:id="@+id/nueva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nuevahistoria"
        android:text=""/>
    <EditText
        android:id="@+id/contenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""/>
    <Button
        android:id="@+id/boton_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:backgroundTint="#dcd3d3"
        android:text="Guardar Historia"
        android:drawableLeft="@drawable/guardar"
        android:drawablePadding="8dp"
        android:onClick="iniciar"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
